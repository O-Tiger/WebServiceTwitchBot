# .env.example - Exemplo de Variáveis de Ambiente
# Copie este arquivo para .env e preencha com suas credenciais

# ===== FLASK =====
# IMPORTANTE: Gere uma chave secreta com: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=GERE_UMA_CHAVE_SECRETA_AQUI
FLASK_DEBUG=False
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ===== AUTENTICAÇÃO =====
# Username do administrador
ADMIN_USERNAME=admin
# Hash da senha (gere com: python -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('SUA_SENHA_FORTE_AQUI'))")
ADMIN_PASSWORD_HASH=GERE_UM_HASH_DE_SENHA_AQUI

# ===== TWITCH OAUTH =====
TWITCH_CLIENT_ID=seu_client_id_aqui
TWITCH_CLIENT_SECRET=seu_client_secret_aqui
TWITCH_REDIRECT_URI=http://SEU_DOMINIO/oauth/twitch/callback

# ===== GOOGLE OAUTH (Opcional) =====
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://SEU_DOMINIO/oauth/google/callback

# ===== GITHUB OAUTH (Opcional) =====
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://SEU_DOMINIO/oauth/github/callback

# ===== DISCORD OAUTH (Opcional) =====
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://SEU_DOMINIO/oauth/discord/callback

# ===== INTEGRATIONS =====
# Discord Webhook
DISCORD_WEBHOOK_URL=

# Minecraft RCON
MINECRAFT_HOST=localhost
MINECRAFT_PORT=25575
MINECRAFT_PASSWORD=

# Email SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=
SMTP_PASSWORD=

# ===== DATABASE =====
DATABASE_PATH=database/bot_data.db
LOGS_DATABASE_PATH=logs/logs.db

# ===== SERVER =====
HOST=0.0.0.0
PORT=5000

# ===== FEATURES =====
ENABLE_VOICE_RECOGNITION=false
ENABLE_DEBUG_MODE=false
AUTO_SAVE_INTERVAL=300

# ===== LIMITS =====
MAX_CHANNELS=10
MAX_MESSAGES_PER_MINUTE=20
SESSION_TIMEOUT=1800

# ======= SOCKETIO =========
ENGINEIO_LOGGER=False
LOGGER=False
PING_TIMEOUT=60
